@model EventEase.Models.Event



<div class="container event-detail py-5">
    <div class="row">
        <div class="col-lg-6">
            <img src="@Model.ImagePath" 
                 class="img-fluid rounded-lg shadow"
                 alt="@Model.EventName at @Model.Venue.VenueName">
        </div>
        
        <div class="col-lg-6">
            <h1>@Model.EventName</h1>
            <h3 class="text-muted mb-4">
                <i class="fas fa-map-marker-alt"></i> 
                @Model.Venue.VenueName, @Model.Venue.Location
            </h3>
            
            <div class="event-meta mb-4">
                <span class="badge badge-primary">
                    <i class="fas fa-calendar-day"></i> 
                    @Model.EventDate.ToString("dddd, MMMM d, yyyy")
                </span>
                
                <span class="badge badge-secondary ml-2">
                    <i class="fas fa-clock"></i> 
                    @Model.EventDate.ToString("h:mm tt")
                </span>
            </div>
            
            <p class="lead">@Model.Description</p>
            
            <div class="mt-5">
                <a href="#" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-ticket-alt"></i> Book Now
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .event-detail img {
            border: 1px solid #dee2e6;
            transition: transform 0.3s;
        }
        
        .event-detail img:hover {
            transform: scale(1.02);
        }
        
        .event-meta .badge {
            font-size: 1rem;
            padding: 0.5em 0.75em;
        }
    </style>
}